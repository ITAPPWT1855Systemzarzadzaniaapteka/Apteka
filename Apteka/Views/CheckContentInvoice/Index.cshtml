@model IEnumerable<Apteka.Models.Sprawdz_zawartosc_faktury>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="input-group custom-search-form">
    <input type="text" id="filter" class="form-control" placeholder="Wpisz nazwę leku...">
    <span class="input-group-btn">
        <button class="btn btn-default" type="button">
            <i class="fa fa-search"></i>
        </button>
    </span>
</div>
<table id="listagem" class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_lek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dawka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opakowanie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Postac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ilosc_zakupionego_leku)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_lek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dawka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opakowanie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ilosc_zakupionego_leku)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_faktura }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id_faktura }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_faktura })
            </td>
        </tr>
    }

</table>
