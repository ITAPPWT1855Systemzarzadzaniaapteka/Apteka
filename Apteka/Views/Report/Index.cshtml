
@{
    ViewBag.Title = "Index";
}

<h2>Generuj Raporty</h2>

<div class="col-md-12">
    <div class="row" style="padding-bottom:15px;">
        <h3>Magazyn</h3><br />
        <a href="@Url.Action("Store", "Report")" class="btn btn-default col-md-offset-1 col-md-2">Stan Magazynu</a>
        <a href="@Url.Action("Medicine", "Report")" class="btn btn-default col-md-offset-1 col-md-2">Dostępne Leki</a>
    </div>

    <div class="row" style="padding-bottom:15px;">
        <h3>Faktury</h3><br />
        <a href="@Url.Action("CheckInvoices", "Report")" class="btn btn-default col-md-offset-1 col-md-2">Faktury</a>
    </div>

    <div class="row" style="padding-bottom:15px;">
        <h3>Sprzedaż</h3><br />
        @using (Html.BeginForm("SellHistory", "Report", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
            <div class="col-md-4 col-md-offset-1">
                <label for="dateTo">Sprzedaż od:</label>
                <input type="date" class="form-control" name="dateFrom" id="dateFrom">  
            </div>
            <div class="col-md-4 col-md-offset-1">
                <label for="dateTo">Sprzedaż do:</label>
                <input type="date" class="form-control" name="dateTo" id="dateTo">
            </div>
            <button action="submit" class="btn btn-default col-md-offset-1 col-md-2">Historia sprzedaży</button>
        }
    </div>
</div>

<script>
    Date.prototype.toDateInputValue = (function () {
        var local = new Date(this);
        local.setMinutes(this.getMinutes() - this.getTimezoneOffset());
        return local.toJSON().slice(0, 10);
    });

    $(document).ready(function () {
        var d = new Date();
        $('#dateTo').val(d.toDateInputValue());
        d.setDate(d.getDate() - 7);
        $('#dateFrom').val(d.toDateInputValue());
    })
</script>