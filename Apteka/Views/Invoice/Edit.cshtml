@model Apteka.Models.Faktura

@{
    ViewBag.Title = "Edit";
}
@section PanelName
{
  <h4>Edytuj</h4>
}
@section Panel
{

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2"><strong>Id faktury:</strong></div>
            <div class="col-md-5">
                @Model.Id_faktura
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label for="Id_hurtownia">Id hurtowni:</label>
                </div>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Id_hurtownia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Id_hurtownia, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="Numer">Numer faktury:</label>
            </div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Numer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Numer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>

    </div>
}
}
@section PanelFooter
{
    <p>  </p>
}