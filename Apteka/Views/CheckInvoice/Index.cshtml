@model IEnumerable<Apteka.Models.Sprawdz_faktury>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-esculap">
    <div class="panel-heading">
        <div class="row">
            <i class="fa fa-file-text fa-fw col-xs-1"></i>
            <div class="col-xs-11">Spis faktur</div>
        </div>
    </div>
    <div class="panel-body">
        <table id="listagem" class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Numer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nazwa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Netto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Brutto)
                    </th>
                    <th>
                      Edycja
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Numer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nazwa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Netto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brutto)
                        </td>
                        <td>
                            @if (User.Identity.Name.Contains("admin"))
                            {
                                @Html.ActionLink("Zmień", "Edit", "Invoice", new { id = item.Id_faktura}, null)
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#listagem').DataTable({
            "order": [[0, "desc"]],
            "language": {
                "url": "js/jquery.datatables.pl.js"
            }
        });
    });
</script>

