@model IEnumerable<Apteka.Models.Hurtownia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Hurtownie</h4>

@section PanelName
{
    Spis hurtowni
}
@section Panel
{

<input type="text" id="filter" class="form-control" />
<table id="listagem" class="table table-striped tablesorter">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIP)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NIP)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id_hurtownia }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id_hurtownia }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id_hurtownia })
            </td>
        </tr>
    }

</table>
}
@section PanelFooter
{
    <p>  </p>
}