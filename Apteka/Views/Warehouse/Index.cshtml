@model IEnumerable<Apteka.Models.Hurtownia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-esculap">
    <div class="panel-heading">
        <div class="row">
            <i class="fa fa-file-text fa-fw col-xs-1"></i>
            <div class="col-xs-11">Spis hurtowni</div>
        </div>
    </div>
    <div class="panel-body">
        <table id="listagem" class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nazwa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NIP)
                    </th>
                    <th></th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nazwa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NIP)
                        </td>
                        <td>
                            @if (User.Identity.Name.Contains("admin"))
                            {
                                <a href="@Url.Action("Edit", "Warehouse", new { Id = item.ID_hurtownia })">Edytuj</a>
                            }

                        </td>
                    </tr>
                }

</table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#listagem').DataTable({
            "order": [[0, "desc"]],
            "language": {
                "url": "js/jquery.datatables.pl.js"
            }
        });
    });
</script>

